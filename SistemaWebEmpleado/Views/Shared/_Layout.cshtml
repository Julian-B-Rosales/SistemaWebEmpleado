<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>

    <div id="header">

        <div id="titulo">SISTEMA Empleado</div>
        <div id="sidebar">
            @if (IsSectionDefined("SideBar"))
            {
                @RenderSection("SideBar")
            }else
            {
                <h3>Administracion de Empleados</h3>
            }
        </div>
        <div id="menu">
                    @Html.ActionLink("Home", "Index", "Empleado")
                    @Html.ActionLink("Empleado", "Todos", "Empleado")
        </div>

    </div>
    
    <div id="content">
        @RenderBody()
    </div>

    <div id="footer">
        <p>Info@Empleado.com</p>
    </div>

</body>
</html>
